  </div>

  <div class="field">
    <%= form.label :membershipExpiration %>
    <%= form.date_select :membershipExpiration %>
  </div>

  <div class="field">
    <%= form.label :amount %>
    <%= form.text_field :amount %>
  </div>
  
  <div class="field">
    <%= form.label :member_id %>
    <%= form.text_field :member_id %>
  </div>
  
  <div class="field">
    <%= form.label :officer_id %>
    <%= form.text_field :officer_id %>
  </div>

  <div class="actions">
