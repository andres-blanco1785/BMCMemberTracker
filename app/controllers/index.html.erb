<p id="notice"><%= notice %></p>

<h1>Payments</h1>

<table>
  <thead>
    <tr>
      <th>Payment Method</th>
      <th>Date</th>
      <th>Membership Type</th>
      <th>Membership Expiration</th>
      <th>Amount</th>
	  <th>Officer Paid to</th>
	  <th>Member Paying</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @payments.each do |payment| %>
      <tr>
        <td><%= payment.paymentMethod %></td>
        <td><%= payment.date %></td>
        <td><%= payment.membershipType %></td>
        <td><%= payment.memberShipExpiration %></td>
        <td><%= payment.amount %></td>
		<td><%= payment.officer_id %></td>
		<td><%= payment.member_id %></td>
        <td><%= link_to 'Show', payment %></td>
        <td><%= link_to 'Edit', edit_payment_path(payment) %></td>
        <td><%= link_to 'Destroy', payment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

